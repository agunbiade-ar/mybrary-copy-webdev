<h3>Search Books</h3>

<form action="/books" method="get">
    <div>
        <label for="name">Title</label>
        <input type="text" name="title" id="" value="<%= searchOptions.title %>">      
    </div>

    <div>
        <label for="publishedAfter">Published After</label>
        <input type="date" name="publishedAfter" id="" value="<%= searchOptions.publishedAfter %>">      
    </div>

    <div>
        <label for="publishedBefore">Published Before</label>
        <input type="date" name="publishedBefore" id="" value="<%= searchOptions.publishedBefore %>">      
    </div>
    <button type="submit">Search</button>
</form>
<br>
<hr>

<div>
    <% books.forEach(book => { %>
        <p><%= book.title %> </p>
        <p>
        <img src="<%= book.coverImagePath %>" height="100px" width="100px">
        </p>
    <% }) %>
</div>