<div>
    <label for="name">Title</label>
    <input type="text" name="title" id="" value="<%= book.title %>">
</div>

<div>
    <label for="author">Author</label>
    <select name="author" id="">
        <% authors.forEach(author => { %>
            <option value="<%= author.id %>">
                <%= author.name %>
            </option>
        <% }) %>
    </select>
</div>

<div>
    <label for="name">Published Date</label>
    <input type="date" name="publishDate" 
    value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0] %>">
</div>

<div>
    <label for="name">Page Count</label>
    <input type="number" name="pageCount" min="1" value="<%= book.pageCount %>">
</div>

<div>
    <label for="cover">Cover</label>
    <input type="file" name="cover">
</div>

<div>
    <label for="description">Description</label>
    <textarea name="description"><%= book.description %> </textarea>
</div>